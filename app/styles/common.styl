html {
  overflow hidden
}

body {
  font-family "Open Sans"
  line-height 1.4
  background-color #fff
  margin 0
  overflow hidden
  -webkit-font-smoothing antialiased
}

canvas {
  width 100%
  height 100%
}

textOverflow(view = block) {
  white-space nowrap
  text-overflow ellipsis
  overflow hidden
  display view
}
